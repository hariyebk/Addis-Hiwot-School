generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id String @id
  username String @unique
}

model Student {
  id String @id
  username String @unique

}

model Teacher {
  id String @id
  username String @unique
}

model Parent {
  id String @id
  username String @unique
}

model Grade {
  id String @id
  username String @unique
}

model Class {
  id String @id
  username String @unique
}
